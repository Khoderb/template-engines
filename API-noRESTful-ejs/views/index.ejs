<div class="container">
    <h2>All products</h2>
    <table>
        <thead>
            <tr>
                <th>Name</th>
                <th>Price</th>
                <th>thumbnail</th>
            </tr>                
        </thead>

        <% products.forEach(product => { %>
            <tr>
                <td><%= product.name %></td>
                <td><%= product.price %></td>
                <td><img src="<%= product.thumbnail %>"/></td>
            </tr>
            <% }); %>
        </table>
        <a  href="/">Create product</a>
</div>

<style>

    div{
        margin: 0 auto;
        max-width: 500px;
        width: 100%;
    }
    h1 {
        text-align: center;
        font-family: sans-serif;
        font-size: 30px;
    }
    
    table {
        border-collapse: collapse;
        width: 100%;
    }

    th, td {
        text-align: left;
        padding: 8px;
        border: 1px solid #ddd;
    }

    tr:nth-child(odd){
        background-color: #f2f2f2
    }

    a{
            font-family: "Helvetica Neue",Helvetica,Arial;
            text-decoration: none;
            color: #00bcd4;
            font-weight: bold;
            text-transform: uppercase;
            background-color: #e1e1e1;
            text-align: center;
            box-shadow: 0 4px 6px -1px rgb(0 0 0 / 0.1), 0 2px 4px -2px rgb(0 0 0 / 0.2);
            border-radius: 1rem;
            padding: 10px;
            margin: 10px auto;
            width:100%;
            max-width: 400px;
            display:block; 
            color :#000;
        }
        a:hover{
            background-color: #fff;
            cursor: pointer;
            transition: all .4s;
        }


        
</style>