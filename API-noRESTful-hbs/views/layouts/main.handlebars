<div class="container">
  <h2 class="title">All Products</h2>
  <table>
      <thead>
        <th>Name</th>
        <th>Price</th>
        <th>Thumbnail</th>
      </thead>
    {{#each products}}
      <tr>
          <td>{{name}}</td>
          <td>$ {{price}}</td>
          <td><img src="{{thumbnail}}" alt="{{name}}"></td>
      </tr>
    {{/each}}
  </table>
  <a href="/">Create product</a>    

</div>
